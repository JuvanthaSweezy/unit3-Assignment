//Declaring Variables
int num3 = (num1+num2);
int num4 = (num1*num2);
int num5 = (num1/num2);
int num6 = (num1-num2);
int num7 = (num2-num1);
    // Question 1
    System.out.println("What is " + num1 + "+" + num2);
  
